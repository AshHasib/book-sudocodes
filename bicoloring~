1  procedure Bicoloring(G,source):
2      Q=queue()
3      Q.enqueue(source)
4      color[source]=white
5      while Q is not empty
6         u ‚Üê Q.pop()
7         for all edges from u to v in G.adjacentEdges(u) do
8             if color[v]=white
9        color[v]=blue, if color[u]=red
10        color[v]=red, otherwise
11                   Q.enqueue(v)
12          end if
13          if color[u]=color[v]
14        return false
15       end if
16       end for
17     end while
18   Return true;
